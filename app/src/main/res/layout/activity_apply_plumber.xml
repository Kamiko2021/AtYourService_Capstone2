<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ApplyPlumber">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:src="@drawable/flogoo" />

        <EditText
            android:id="@+id/plumberFirstname_edittxt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30sp"
            android:hint="FIRST NAME"
            android:inputType="text"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/plumberLastname_edittxt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30sp"
            android:hint="LAST NAME"
            android:inputType="text"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/plumberEmail_edittxt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30sp"
            android:hint="EMAIL"
            android:inputType="text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/plumberPassword_edittxt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30sp"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/plumberbirthdate_edittxt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30sp"
            android:hint="BIRTHDATE: MM/DD/YYYY"
            android:inputType="date"
            android:textSize="16sp" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="240dp"
            android:layout_height="54dp"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#115a5f"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>