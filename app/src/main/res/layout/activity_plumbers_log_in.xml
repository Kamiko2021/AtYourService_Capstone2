<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlumbersLogIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/AtyourserviceLogo"
            android:layout_width="365dp"
            android:layout_height="162dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/logoo" />

        <EditText
            android:id="@+id/Edittxt_email"
            android:layout_width="319dp"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="11dp"
            android:hint="EMAIL"
            android:inputType="textWebEmailAddress"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/Edittxt_password"
            android:layout_width="310dp"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textSize="20sp"/>

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="176dp"
            android:layout_height="148dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/LogIn_btn"
            android:layout_width="287dp"
            android:layout_height="56dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="36dp"
            android:backgroundTint="#115a5f"
            android:text="SIGN IN"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/AsClient_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37sp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Sign in as Client?"
            android:textColor="#00008b"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ForgotPassword_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:text="Forgot Password?"
            android:textColor="#00008b"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/PlumbersApplication_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37sp"
            android:text="Apply Now as Plumber?"
            android:textColor="#00008b"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>