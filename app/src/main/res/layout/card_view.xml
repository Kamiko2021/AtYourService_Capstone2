<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp"
    android:id="@+id/cardView"
    android:layout_height="90dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#124de3">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/defaultprofile"
            android:id="@+id/profileImg"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Firstname_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="firstname"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lastname_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lastname"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latitude_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latitude"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/longhitude_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longhitude"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uid_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uid"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>