<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1467d3"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/searchprofImg_plumber"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultprofile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Firstname_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="firstname"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lastname_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lastname"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/action_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latitude_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latitude"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/longhitude_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longhitude"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/uid_Ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uid"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>